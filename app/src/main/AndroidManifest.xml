<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rizqanmr.githubuser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    
    <permission android:name="com.rizqanmr.githubuser.READ_DATABASE"
        android:protectionLevel="normal"/>
    <permission android:name="com.rizqanmr.githubuser.WRITE_DATABASE"
        android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_github_user"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round_github_user"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SettingActivity"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>
        <provider
            android:authorities="com.rizqanmr.githubuser"
            android:name=".utils.FavProvider"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.rizqanmr.githubuser.READ_DATABASE"
            android:writePermission="com.rizqanmr.githubuser.WRITE_DATABASE"/>

        <activity android:name=".view.FavActivity"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>
        <activity android:name=".view.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
        <activity
            android:name=".view.DetailActivity"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>

        <receiver android:name=".utils.AlarmReceiver"
            android:enabled="true"
            android:permission="TODO"/>
    </application>

</manifest>